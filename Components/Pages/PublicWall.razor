@page "/public-wall"
@using Journal.Models
@using Journal.Services
@inject IJournalService JournalService
@inject NavigationManager Nav
@inject IJSRuntime JS

@code {
    /// <summary>
    /// This component facilitates community interaction by displaying a feed of 
    /// explicitly shared journal entries. It implements server-side pagination
    /// and keyword-based filtering to ensure high performance even with large datasets.
    /// </summary>
}

<div class="public-container">
    <div class="public-header">
        <div class="header-content">
            <h1 class="premium-title">Community Wall</h1>
            <p class="premium-subtitle">Shared reflections from the community</p>
        </div>
        <div class="header-actions">
            <div class="search-box">
                <input type="text" 
                       placeholder="Search reflections..." 
                       @bind="SearchText" 
                       @onkeyup="@(async e => { if(e.Key == "Enter") await PerformSearch(); })" />
                @if (!string.IsNullOrEmpty(SearchText))
                {
                    <button class="clear-btn" @onclick="ClearSearch">√ó</button>
                }
                <button class="search-btn" @onclick="PerformSearch">Search</button>
            </div>
            <button class="refresh-btn" @onclick="LoadEntries">
                Refresh
            </button>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Gathering reflections...</p>
        </div>
    }
    else if (Entries == null || !Entries.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">üåç</div>
            <h3>No public entries yet</h3>
            <p>Be the first to share your thoughts with the world!</p>
            <button class="action-btn" @onclick='() => Nav.NavigateTo("/write")'>Write an entry</button>
        </div>
    }
    else
    {
        <div class="entries-grid">
            @foreach (var entry in Entries)
            {
                <div class="entry-card">
                    <div class="entry-card-header">
                        <div class="author-info">
                            <div class="author-avatar">@entry.Author[0]</div>
                            <div class="author-details">
                                <span class="author-name">@entry.Author</span>
                                <span class="entry-date">@entry.EntryDate.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                        <div class="mood-badge">@entry.PrimaryMood</div>
                    </div>
                    
                    <div class="entry-card-body">
                        <p class="entry-preview">@entry.ContentPreview</p>
                        
                        @if (entry.Tags.Any())
                        {
                            <div class="entry-tags">
                                @foreach (var tag in entry.Tags)
                                {
                                    <span class="tag">#@tag</span>
                                }
                            </div>
                        }
                    </div>

                    <div class="entry-card-footer">
                        <span class="category-tag"># @entry.Category</span>
                        <span class="word-count">@entry.WordCount words</span>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination Controls -->
        <div class="pagination-container">
            <button class="pag-btn" disabled="@(CurrentPage <= 1)" @onclick="() => ChangePage(CurrentPage - 1)">
                Previous
            </button>
            
            <div class="page-indicator">
                Page <span class="current">@CurrentPage</span> of <span class="total">@TotalPages</span>
                <span class="total-info">(@TotalEntries entries total)</span>
            </div>

            <button class="pag-btn" disabled="@(CurrentPage >= TotalPages)" @onclick="() => ChangePage(CurrentPage + 1)">
                Next
            </button>
        </div>
    }
</div>

@code {
    private List<JournalEntryDisplayModel>? Entries;
    private bool IsLoading = true;
    
    // Search State
    private string SearchText = "";
    
    // Pagination State
    private int CurrentPage = 1;
    private int PageSize = 6;
    private int TotalPages = 1;
    private int TotalEntries = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadEntries();
    }

    /// <summary>
    /// Fetches public entries from the service based on current pagination state.
    /// </summary>
    private async Task LoadEntries()
    {
        IsLoading = true;
        StateHasChanged();
        
        try 
        {
            // Executes the paged retrieval request with the current search and page context.
            var result = await JournalService.GetPublicEntriesPagedAsync(SearchText, CurrentPage, PageSize);
            
            Entries = result.Items;
            TotalEntries = result.TotalCount;
            TotalPages = (int)Math.Ceiling((double)TotalEntries / PageSize);
            
            // Boundary check: if entries deleted/changed and current page is out of bounds
            if (TotalPages > 0 && CurrentPage > TotalPages)
            {
                CurrentPage = TotalPages;
                await LoadEntries();
            }
        }
        catch (Exception)
        {
            // Fail gracefully
            Entries = new();
        }
        finally
        {
            IsLoading = false;
        }
    }

    /// <summary>
    /// Executes search and resets to first page.
    /// </summary>
    private async Task PerformSearch()
    {
        CurrentPage = 1;
        await LoadEntries();
    }

    /// <summary>
    /// Clears search filter and reloads.
    /// </summary>
    private async Task ClearSearch()
    {
        SearchText = "";
        CurrentPage = 1;
        await LoadEntries();
    }

    /// <summary>
    /// Updates the current page and reloads entries.
    /// </summary>
    private async Task ChangePage(int newPage)
    {
        if (newPage >= 1 && newPage <= TotalPages)
        {
            CurrentPage = newPage;
            await LoadEntries();
            
            // Provides visual feedback by resetting the view position to the start of the list.
            await JS.InvokeVoidAsync("window.scrollTo", 0, 0);
        }
    }
}
